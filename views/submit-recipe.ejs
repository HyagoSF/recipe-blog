<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold ">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="">Share your amazing recipes with thousands of web developers accorss the world. Fill our form to get
            started.</p>
    </div>
</div>




<!-- FORM -->



<div class="row justify-content-center">

    <!-- FLASH MESSAGE(alert) IF THERE'S SOME TO SHOW -->
    <% if (infoSubmitObj != '') { %>
        <div class="alert alert-success col-8" role="alert">
            <%= infoSubmitObj  %> 
        </div>
    <% } %>

    <% if (infoErrorsObj != '') { %>
        <div class="alert alert-danger col-8" role="alert">
            <%= infoErrorsObj %> 
        </div>
    <% } %>



    <div class="col-8">
        <!-- enctype='multipart/form-data' => to be able to upload images -->
        <form action="/submit-recipe" enctype='multipart/form-data' method="POST" class="needs-validation" novalidate>

            <div class="row g-3">

                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>

                <div class="col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="description" class="form-control" id="description" cols="30" rows="4" required></textarea>
                </div>

                <div class="col-12">
                    <label for="ingredients" class="form-label">Ingredients</label>
                    <div class="ingredientList">
                        <div class="ingredientDiv mb-1">
                            <!-- I want to duplicate this for the user be able to put more than one ingredient -->
                            <input type="text" name="ingredients" class="form-control" required>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <!-- button to be able to duplicate the ingredient input -->
                    <button type="button" class="btn btn-outline-warning" id="addIngredientsBtn"> + Ingredient</button>
                </div>

                <div class="col-12">
                    <label for="category">Select category</label>
                    <select required class="form-select form-control" name="category" id="Category">
                        <option selected disabled value=""> Select a Category</option>
                        <option value="Thai">Thai</option>
                        <option value="American">American</option>
                        <option value="Chinese">Chinese</option>
                        <option value="Mexican">Mexican</option>
                        <option value="Indian">Indian</option>
                        <option value="Spanish">Spanish</option>
                    </select>
                </div>


                <div class="col-12">
                    <label for="image">Recipe Image</label>
                    <!-- Here i'm accepting all types of image, but I could do just for example: jpeg, png... -->
                    <input type="file" class="form-control " name="image" accept="image/*" required>
                </div>

                <div class="col-12">
                    <button class="btn btn-warning">Submit Recipe</button>
                </div>
            </div>

















        </form>
    </div>
</div>