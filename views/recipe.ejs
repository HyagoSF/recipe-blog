<% if (recipe !=null) { %>

    <!-- Breadcrumb BS -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %> </li>
        </ol>
    </nav>

    <!-- Information -->
    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top" style="top: 20px" alt="<%- recipe.name %>" loading="lazy">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1> <%- recipe.name %> </h1>
                </div>
                <div class="col-12 mb-4">
                    <i class="bi bi-tag"></i> <%- recipe.category %>
                </div> <!-- i element to create a tag icon -->

                <div class="col-12" style="white-space: pre-line;"> <!-- white-space to pre-line is to display like is displaying in my String -->
                    <h4>Cooking Instructions</h4>
                    <%- recipe.description %> 
                </div>
            </div>

            <div class="pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe.ingredients.forEach(element=> { %>
                            <li class="list-group-item">
                                <%- element %> 
                            </li> 
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    No Items Found.
<% } %> 